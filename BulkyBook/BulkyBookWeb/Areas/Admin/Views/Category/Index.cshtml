@model IEnumerable<Category>
@{
	ViewData["Title"] = "Category";
}

<div class="container p-3">
	<div class="row p-4">
		<div class="col-6">
			<h2 class="text-primary">Lista de Categorias</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				Criar nova Cateoria
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped" style="width=100%">
		<thead>
			<tr>
				<th>
					Categoria
				</th>
				<th>
					Display Order
				</th>
				<th>
					Data de criação
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td width="30%">
						@item.Name
					</td>
					<td width="30%">
						@item.DisplayOrder
					</td>
					<td width="30%">
						@item.CreatedDateTime.ToString("dd/MM/yyyy HH:mm")
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

